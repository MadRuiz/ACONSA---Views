<div class="">
    <form class="container">
        <div class="row">
            <div class="form-group col-5">
                <label>Fecha: </label>
                <input type="text" class="form-control" id="" disabled placeholder="#-###" value="@DateTime.Now.Date">
            </div>
            <div class="form-group col-7">
                <label>Mecan.: </label>
                <input name="" type="text" class="form-control" data-val="true"
                        autocomplete="off"
                        list="ListaMecan">
                <datalist id="ListaMecan">
                    <option>Mecan 1</option>
                    <option>Mecan 2</option>
                </datalist>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="form-group col-2">
                <label>Código: </label>
                <input type="text" class="form-control" id="" placeholder="#-###">
            </div>
            <div class="form-group col-10">
                <label class="control-label mb-1">Cliente: </label>
                <input name="" type="text" class="form-control cc-name valid" data-val="true"
                       autocomplete="off" aria-required="true" aria-invalid="false" aria-describedby="cc-name-error"
                       list="ListaClientes">
                <datalist id="ListaClientes">
                    <option>#-#### | Carlos Flores</option>
                    <option>#-#### | José Rivera</option>
                    <option>#-#### | Laura Esmeralda</option>
                </datalist>
            </div>
            <div class="form-group col-4">
                <label class="control-label mb-1">Tipo de Factura: </label>
                <input name="" type="text" class="form-control cc-name valid" data-val="true"
                       autocomplete="off" aria-required="true" aria-invalid="false" aria-describedby="cc-name-error"
                       list="TipoFacturaLista">
                <datalist id="TipoFacturaLista">
                    <option>Crédito Fiscal</option>
                    <option>Nota de Remisión</option>
                    <option>Al Consmidor Final</option>
                </datalist>
            </div>
            <div class="form-group col-8">
                <label for="">Dirección: </label>
                <input type="text" class="form-control" id="" placeholder="">
            </div>
            <div class="form-group col-5">
                <label class="control-label mb-1">Departamento: </label>
                <input name="" type="text" class="form-control cc-name valid" data-val="true"
                       autocomplete="off" aria-required="true" aria-invalid="false" aria-describedby="cc-name-error"
                       list="DeptoLista">
                <datalist id="DeptoLista">
                    <option>Depto 1</option>
                    <option>Depto 14 </option>
                </datalist>
            </div>
            <div class="form-group col-7">
                <label class="control-label mb-1">Municipio: </label>
                <input name="" type="text" class="form-control cc-name valid" data-val="true"
                       autocomplete="off" aria-required="true" aria-invalid="false" aria-describedby="cc-name-error"
                       list="MunicipioLista">
                <datalist id="MunicipioLista">
                    <option>Municipio 1</option>
                    <option>Municipio 252 </option>
                </datalist>
            </div>
            <div class="form-group col-4">
                <label for="">DUI: </label>
                <input type="number" class="form-control" id="" placeholder="">
            </div>
            <div class="form-group col-4">
                <label for="">NIT: </label>
                <input type="number" class="form-control" id="" placeholder="">
            </div>
            <div class="form-group col-4">
                <label for="">NRC: </label>
                <input type="number" class="form-control" id="" placeholder="">
            </div>
            <div class="col-12">
                <hr />
            </div>
            <div class="form-group col-12">
                <label for="">Pedido No. </label>
                <input type="number" class="form-control" id="" placeholder="######" disabled>
            </div>
            <div class="form-group col-8">
                @* INSERTE EL IR AGREGANDO ITEMS AQUÍ *@
            </div>
        </div>
        <div class="row">
            @* INSERTE EL IR VIENDO LA TABLA AQUÍ *@
            <div class="pull-right col-12">
                <a href="#" class="btn btn-primary text-left">
                    <i class="fa fa-dollar"></i> 
                    Facturar
                </a>
            </div>
        </div>
    </form>
</div>
