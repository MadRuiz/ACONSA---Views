@* Llamar a tabs de form y reporte en bordado*@

@{
    ViewBag.Title = "Ventas";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">Ventas</h2>
                    </div>
                </div>
            </div>
            <hr />
    
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            @Html.Partial("../Components/FormViews/_VentaNueva")
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                @Html.Partial("../Components/_Footer")
            </div>

        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/table2excel.js"></script>
    <script type="text/javascript">
        $('#btn').click(function () {
            $('.table').table2excel({
                exclude: ".noExl",
                name: "My Bio",
                filename: "OrdenPedido"
            });
        });
    </script>
}
@Html.Partial("../Components/Modals/_ExportarPedidoExcel")
