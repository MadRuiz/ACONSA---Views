
@{
    ViewBag.Title = "Index";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">overview</h2>
                        <button class="au-btn au-btn-icon au-btn--blue">
                            <i class="zmdi zmdi-plus"></i>add item
                        </button>
                    </div>
                </div>
            </div>
            <!--Widgets-->
            <div class="row m-t-25">
                @Html.Partial("../Components/_EstadisticasInicio")
            </div>
            <!--End Widgets-->
            
            <div class="row">
                <!--Waves Char-->
                <div class="col-lg-6">
                    @Html.Partial("../Components/_CharTwoWavesData");
                </div>
                <!--End Waves Char-->

                <!--Circle Char-->
                <div class="col-lg-6">
                    @Html.Partial("../Components/_CharTwoCircleData")
                </div>
                <!--End Circle Char-->
            </div>
            <div class="row">
                @Html.Partial("../Components/_OrdersTable")
                @Html.Partial("../Components/_RankingTable")
